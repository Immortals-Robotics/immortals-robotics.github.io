---
interface Props {
	title?: string;
}

const { title = "Immortals Robotics Team" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/assets/logo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Immortals SSL</title>
		<meta name="description" content="Immortals Small Size League robotics team, founded in 2008 and participating in RoboCup competitions worldwide." />
	</head>
	<body>
		<header>
			<nav>
				<div class="logo">
					<a href="/"><img src="/assets/logo.png" alt="Immortals Logo" height="60" /></a>
				</div>
				<ul class="nav-links">
					<li><a href="/">Home</a></li>
					<li><a href="/about">About</a></li>
					<li><a href="/achievements">Achievements</a></li>
					<li><a href="/news">News</a></li>
					<li><a href="/team">Team</a></li>
					<li><a href="/contact">Contact</a></li>
				</ul>
			</nav>
		</header>
		<main>
			<slot />
		</main>
		<footer>
			<div class="footer-content">
				<div class="footer-logo">
					<img src="/assets/logo.png" alt="Immortals Logo" height="40" />
					<p>Â© {new Date().getFullYear()} Immortals Robotics Team</p>
				</div>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--primary: #000000; /* Black */
		--secondary: #004146; /* Dark Teal */
		--accent: #018076; /* Medium Teal */
		--highlight: #03BFB5; /* Light Teal */
		--medium-gray: #949398; /* Medium Gray */
		--light: #EFF5F9; /* Light Gray */
	}
	
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	
	html, body {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		background-color: var(--light);
		color: var(--primary);
		line-height: 1.6;
	}
	
	a {
		color: var(--highlight);
		text-decoration: none;
		transition: all 0.3s ease;
	}
	
	a:hover {
		text-decoration: underline;
	}
	
	header {
		background-color: var(--primary);
		padding: 1rem 2rem;
		box-shadow: 0 2px 5px rgba(0,0,0,0.1);
	}
	
	nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		max-width: 1200px;
		margin: 0 auto;
	}
	
	.nav-links {
		display: flex;
		list-style: none;
		gap: 1.5rem;
	}
	
	.nav-links a {
		color: var(--light);
		font-weight: 500;
	}
	
	.nav-links a:hover {
		color: var(--highlight);
	}
	
	main {
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem;
		min-height: calc(100vh - 160px);
	}
	
	footer {
		background-color: var(--primary);
		color: var(--light);
		padding: 1.5rem 2rem;
	}
	
	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
	}
	
	.footer-logo {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	
	h1, h2, h3, h4, h5, h6 {
		color: var(--secondary);
		margin-bottom: 1rem;
	}
	
	p {
		margin-bottom: 1rem;
	}
	
	img {
		max-width: 100%;
	}
	
	.btn {
		display: inline-block;
		background-color: var(--accent);
		color: white;
		padding: 0.5rem 1.5rem;
		border-radius: 4px;
		font-weight: 500;
		transition: all 0.3s ease;
	}
	
	.btn:hover {
		background-color: var(--secondary);
		text-decoration: none;
	}
	
	@media (max-width: 768px) {
		nav {
			flex-direction: column;
			gap: 1rem;
		}
		
		.nav-links {
			flex-direction: column;
			align-items: center;
			gap: 0.5rem;
		}
	}
</style>
