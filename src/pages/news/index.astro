---
import Layout from '../../layouts/Layout.astro';
const allPosts = await Astro.glob('./*.md');
---

<Layout title="Immortals News">
  <div class="news-page">
    <h1>Latest News</h1>
    <p class="intro">Stay updated with the latest news and achievements from the Immortals Robotics Team.</p>
    
    <div class="news-grid">
      {allPosts.map((post) => (
        <div class="news-card">
          <div class="news-date">
            {post.frontmatter.date}
          </div>
          <h2 class="news-title">
            <a href={post.url}>{post.frontmatter.title}</a>
          </h2>
          <div class="news-author">By {post.frontmatter.author}</div>
          <a href={post.url} class="read-more">Read More â†’</a>
        </div>
      ))}
    </div>
  </div>
</Layout>

<style>
  .news-page {
    padding: 2rem 0;
  }
  
  h1 {
    margin-bottom: 0.5rem;
    color: var(--primary);
  }
  
  .intro {
    max-width: 800px;
    margin-bottom: 3rem;
  }
  
  .news-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .news-card {
    background-color: white;
    border-radius: 8px;
    padding: 1.5rem;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
  }
  
  .news-card:hover {
    transform: translateY(-5px);
  }
  
  .news-date {
    color: var(--highlight);
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }
  
  .news-title {
    margin-bottom: 0.5rem;
  }
  
  .news-author {
    font-size: 0.9rem;
    color: var(--accent);
    margin-bottom: 1rem;
  }
  
  .read-more {
    display: inline-block;
    color: var(--highlight);
    font-weight: 500;
  }
</style>
